<div class="{{styles.profile}}">
    <aside class="{{styles.sidebar}}">
        <button class="{{styles.exit}}">
            <img src="Arrow.png"/>
        </button>
    </aside>
    <main class="{{styles.main}}">
        <div class="{{styles.user}}">
            <div class="{{styles.avatar}}">
                <img width="100%" height="100%" src="blank.png"/>
            </div>
            <h3>Артём Марченко</h3>
        </div>
<!--    TODO: Разобраться, почему не инакпсулируются css модули внутрь blocked-helper handlebars    -->
        <ul class="{{styles.credentials}}">
            {{#each credentials as |credential|}}
                <li>
                    <span class="{{styles.title}}">
                        {{credential.title}}
                    </span>
                    <span class="{{styles.value}}">
                        {{credential.value}}
                    </span>
                </li>
            {{/each}}
        </ul>
        <ul class="{{styles.credentials}}">
            <li>
                {{> button label='Изменить данные'}}
            </li>
            <li>
                {{> button label='Изменить пароль'}}
            </li>
            <li class="{{styles.logout}}">
                {{> button label='Выйти'}}
            </li>
        </ul>
    </main>
</div>