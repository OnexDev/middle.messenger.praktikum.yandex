{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": { "files": true },
  "lib": [
    "ESNext",
    "DOM"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
